<?xml version="1.0"?>

<robot name="lrs">
    <link name="lrs_link">
        <visual>
            <origin rpy="0 3.14159 3.14159" xyz="-5 0 3"/> 
            <geometry>
                <mesh filename="package://offline_trajectory_provider_package/urdf/meshes/stl/lrs.stl" scale="10 10 10"/>
            </geometry>
                <material name="shiny_red">
                    <color rgba="1.0 0.0 0.0 1.0"/>     <!-- Red color with full opacity -->
                    <specular rgba="1.0 1.0 1.0 1.0"/>  <!-- White specular highlights -->
                    <ambient rgba="0.2 0.2 0.0 1.0"/>   <!-- Ambient color with a slight greenish tint -->
                    <diffuse rgba="0.8 0.8 0.0 1.0"/>   <!-- Diffuse color with yellowish tint -->
                </material>
        </visual>
    </link>
</robot>
